<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TranspoJo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TranspoJo.styles.css" asp-append-version="true" />

    <style>
        /* Offset sidebar below fixed navbar */
        .offcanvas-start {
            top: 95px !important; /* Match your navbar height */
            height: calc(100% - 70px); /* Avoid overlapping footer */
            width: 250px; /* fixed width */
            transition: transform 0.3s ease-in-out;
            /* Initially hidden by moving fully left */
            transform: translateX(-100%);
            /* Remove default backdrop and shadows */
            box-shadow: none;
            background-color: #fff; /* keep original background */
            border-right: 1px solid #dee2e6;
            color: #333;
            z-index: 1040; /* above content but below navbar */
        }

            /* Show sidebar by sliding it in */
            .offcanvas-start.show {
                transform: translateX(0);
            }

        /* Disable Bootstrap's backdrop by hiding it */
        .offcanvas-backdrop {
            display: none !important;
        }

        /* Adjust offcanvas header and body as in your original style */
        .offcanvas-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .offcanvas-body {
            padding-top: 0.5rem;
        }

        .offcanvas .nav-link {
            font-weight: 500;
            color: #333;
            transition: background-color 0.2s ease;
        }

            .offcanvas .nav-link:hover {
                background-color: #f0f0f0;
                border-radius: 0.375rem;
                padding-left: 0.75rem;
            }

            /* Active link highlight (you can customize as needed) */
            .offcanvas .nav-link.active {
                background-color: #0d6efd;
                color: white;
                font-weight: 600;
                padding-left: 0.75rem;
                border-radius: 0.375rem;
            }

        /* Keep your existing styles */
        .navbar-brand img {
            object-fit: contain;
        }

        .btn-toggle-sidebar {
            border: none;
            background: transparent;
            color: #fff;
            font-size: 1.5rem;
        }

            .btn-toggle-sidebar:hover {
                color: #ddd;
            }

        .footer {
            background-color: #f1f1f1;
            padding: 1rem 0;
            text-align: center;
            font-size: 0.9rem;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1a0e1b;">
            <div class="container-fluid d-flex align-items-center">
                <!-- Logo -->
                <a asp-controller="Home" asp-action="pick" class="navbar-brand d-flex align-items-center">
                    <img src="~/images/logo-photoroom.png" alt="Transpo.Jo Logo" width="70" height="70" />
                </a>

                <!-- Sidebar Toggle Button -->
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn-toggle-sidebar ms-2" type="button" id="sidebarToggle" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle sidebar">
                        <i class="bi bi-list"></i>
                    </button>
                }

                <!-- Navbar Toggler for responsive collapse -->
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="pick" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="AboutUs" asp-action="AboutUs" class="nav-link">About Us</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown pe-3">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i> Sign Out
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Log In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar Offcanvas -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel" data-bs-scroll="true" data-bs-backdrop="false">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarLabel">Admin Menu</h5>
                <button type="button" class="btn-close" id="sidebarClose" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Dashboard">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="mb-2">
                        <a class="nav-link" asp-controller="BusStations" asp-action="Index">
                            <i class="bi bi-bus-front"></i> Bus Stations
                        </a>
                    </li>
                    <li class="mb-2">
                        <a class="nav-link" asp-controller="RentalPlaces" asp-action="Index">
                            <i class="bi bi-car-front"></i> Rental Places
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }

    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container d-flex flex-wrap justify-content-center gap-2">
            <span>&copy; Transpo.Jo. All Rights Reserved 2025</span>
            <span>|</span>
            <a href="#">Terms & Conditions</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.getElementById('sidebarToggle');
            const closeBtn = document.getElementById('sidebarClose');

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    sidebar.classList.toggle('show');
                    // Optionally update aria-expanded
                    const expanded = toggleBtn.getAttribute('aria-expanded') === 'true';
                    toggleBtn.setAttribute('aria-expanded', !expanded);
                });
            }

            if (closeBtn) {
                closeBtn.addEventListener('click', function () {
                    sidebar.classList.remove('show');
                    toggleBtn.setAttribute('aria-expanded', 'false');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
