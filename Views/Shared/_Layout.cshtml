<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TranspoJo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TranspoJo.styles.css" asp-append-version="true" />
    <style>
        .footer {
            height: 55px;
            background-color: #2a1b2f;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 10px;
            color: #fff;
        }

            .footer a {
                color: #ff6600;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #cc5200;
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1a0e1b;">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="home" class="navbar-brand ms-2">
                    <img src="~/images/logo-photoroom.png" alt="Transpo.Jo Logo" height="55" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



    </header>
 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <p class="Rights">&copy; Transpo.Jo. All Rights Reserved 2025</p>
        <p>|</p>
        <p class="Terms"><a href=".......">Terms & Conditions</a></p>
    </footer>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
