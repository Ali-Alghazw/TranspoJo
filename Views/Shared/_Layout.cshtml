<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TranspoJo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TranspoJo.styles.css" asp-append-version="true" />

</head>
<body>
 <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1a0e1b;">
        <div class="container-fluid d-flex align-items-center">
            <!-- Logo -->
            <a asp-controller="Home" asp-action="pick" class="navbar-brand d-flex align-items-center">
                <img src="~/images/logo-photoroom.png" alt="Transpo.Jo Logo" width="70px" height="70px" />
            </a>

            <!-- Sidebar Toggle Button (only when authenticated) -->
            @if (User.Identity.IsAuthenticated)
            {
                <button class="btn btn-outline-light ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    <i class="bi bi-list" style="font-size: 1.5rem;"></i>
                </button>
            }

            <!-- Navbar Toggler for responsive collapse -->
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="pick" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="AboutUs" asp-action="AboutUs" class="nav-link">About Us</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown pe-3">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Sign Out
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Log In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Sidebar Offcanvas (shown only if authenticated) -->
@if (User.Identity.IsAuthenticated)
{
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarLabel">Admin Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-unstyled">
                <li class="mb-2">
                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                        <i class="bi bi-grid"></i> Dashboard
                    </a>
                </li>
                <li class="mb-2">
                    <a class="nav-link" asp-controller="BusStations" asp-action="Index">
                        <i class="bi bi-people"></i> Bus Stations
                    </a>
                </li>
                <li class="mb-2">
                    <a class="nav-link" asp-controller="RentalPlaces" asp-action="Index">
                        <i class="bi bi-person-lines-fill"></i> Rental Places
                    </a>
                </li>
            </ul>
        </div>
    </div>
}


    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container d-flex flex-wrap justify-content-center gap-2">
            <span>&copy; Transpo.Jo. All Rights Reserved 2025</span>
            <span>|</span>
            <a href="#">Terms & Conditions</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
