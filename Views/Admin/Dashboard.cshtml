@using TranspoJo.DTOs
@model AdminDashboardDto

@{
    ViewData["Title"] = "Dashboard";
}
@{
    var stationLabels = Model.StationStart.Select(s => s.StationName).ToList();
    var stationCounts = Model.StationStart.Select(s => s.StartRoutesCount).ToList();
}


<link href="~/css/dashboard.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container">
    <h4 class="h1">Transp.Jo</h4>

    <div class="row justify-content-center">
        <!-- BusStation Card -->
        <div class="col-xxl-4 col-md-6 mb-3">
            <div class="card text-dark shadow-lg">
                <div class="card-body d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div>
                        <p class="card-title">
                            <a asp-controller="BusStations" asp-action="Index">BusStation</a>
                        </p>
                        <p class="card-text">Total Bus Stations: @Model.BusStationCount</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- RentalPlace Card -->
        <div class="col-xxl-4 col-md-6 mb-3">
            <div class="card text-dark shadow-lg">
                <div class="card-body d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <div>
                        <p class="card-title">
                            <a asp-controller="RentalPlaces" asp-action="Index">RentalPlace</a>
                        </p>
                        <p class="card-text">Total Rental Places: @Model.RentalPlaceCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4" style="background-color:white">
    <h5>Routes Starting from Each Bus Station</h5>
    <canvas id="routesChart" width="400" height="200"></canvas>
</div>
<script>
    const labels = @Html.Raw(Json.Serialize(stationLabels));
    const data = @Html.Raw(Json.Serialize(stationCounts));

    const ctx = document.getElementById('routesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Starting Routes Count',
                data: data,
                backgroundColor: 'rgba(255, 102, 0, 1)',
                borderColor: 'rgba(255, 102, 0, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Number of Routes'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Bus Station Name'
                    }
                }
            }
        }
    });
</script>
