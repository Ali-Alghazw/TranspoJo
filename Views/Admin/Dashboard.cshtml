@using TranspoJo.DTOs
@model AdminDashboardDto

@{
    ViewData["Title"] = "Dashboard";
}
@{
    var stationLabels = Model.StationStart.Select(s => s.StationName).ToList();
    var stationCounts = Model.StationStart.Select(s => s.StartRoutesCount).ToList();
}

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease, filter 0.3s ease;
        position: relative;
        overflow: hidden;
        height: 150px;
        background: #fff;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
            filter: brightness(1.05);
        }

    .card-body {
        display: flex;
        align-items: center;
        height: 100%;
        padding: 20px;
        position: relative;
        z-index: 1;
        color: #333;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
        color: #333;
    }

    .card-text {
        font-size: 1.1rem;
        color: #555;
    }

    .card-icon {
        font-size: 2.5rem;
        color: #007bff;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        transition: color 0.3s ease;
    }

    .card:hover .card-icon {
        color: #0056b3;
    }

    .card-title a {
        text-decoration: none;
        transition: color 0.3s ease;
        color: #007bff;
    }

        .card-title a:hover {
            color: #0056b3;
        }

    .container {
        max-width: 1200px;
        margin-top: 20px;
    }

    .card-icon i {
        transition: transform 0.3s ease;
    }

    .card:hover .card-icon i {
        transform: scale(1.1);
    }

    .h1 {
        font-size: 2.0rem;
        font-weight: 700;
        color: #007bff;
        text-align: center;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 123, 255, 0.3);
        background-color: white;
        margin-bottom: 2rem;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container">
    <h4 class="h1">Transp.Jo</h4>

    <div class="row justify-content-center">
        <!-- BusStation Card -->
        <div class="col-xxl-4 col-md-6 mb-3">
            <div class="card text-dark shadow-lg">
                <div class="card-body d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-bus"></i>
                    </div>
                    <div>
                        <p class="card-title">
                            <a asp-controller="BusStations" asp-action="Index">BusStation</a>
                        </p>
                        <p class="card-text">Total Bus Stations: @Model.BusStationCount</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- RentalPlace Card -->
        <div class="col-xxl-4 col-md-6 mb-3">
            <div class="card text-dark shadow-lg">
                <div class="card-body d-flex align-items-center">
                    <div class="card-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <div>
                        <p class="card-title">
                            <a asp-controller="RentalPlaces" asp-action="Index">RentalPlace</a>
                        </p>
                        <p class="card-text">Total Rental Places: @Model.RentalPlaceCount</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <h5>Routes Starting from Each Bus Station</h5>
    <canvas id="routesChart" width="400" height="200"></canvas>
</div>
<script>
    const labels = @Html.Raw(Json.Serialize(stationLabels));
    const data = @Html.Raw(Json.Serialize(stationCounts));

    const ctx = document.getElementById('routesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Starting Routes Count',
                data: data,
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Number of Routes'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Bus Station Name'
                    }
                }
            }
        }
    });
</script>
