@model TranspoJo.DTOs.BusStationDto
@{
    ViewData["Title"] = "Edit Bus Station";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Bus Station</h2>
    <form asp-action="Edit" method="post" class="border p-4 rounded shadow-sm bg-light">

        <input asp-for="Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Latitude</label>
            <input name="Coordinates.Latitude" value="@Model.Coordinates?.Latitude" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Longitude</label>
            <input name="Coordinates.Longitude" value="@Model.Coordinates?.Longitude" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
