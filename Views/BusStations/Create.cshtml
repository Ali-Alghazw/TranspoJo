@model TranspoJo.DTOs.BusStationDto
@{
    ViewData["Title"] = "Add Bus Station";
}

<div class="container mt-5">
    <h2 class="mb-4">Add Bus Station</h2>
    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-light">

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Latitude</label>
            <input name="Coordinates.Latitude" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Longitude</label>
            <input name="Coordinates.Longitude" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
